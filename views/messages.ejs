<link rel="stylesheet" href="messages.css">

<div class="container">

    <% if (typeof message !== 'undefined') { %>
        <p class="message" style="color: red;"><%= message %></p>
    <% } %>
    
    <h2><%= role %></h2>  

    <h2>Here are your messages:</h2>
    
    <ul class="messages">
        <% messages.forEach(function(message) { %>
            <li>
                <!-- Show message details (common to all) -->
                <div class="message-content"><%= message.message %></div>
                
                <!-- If user is a member, show username and date -->
                <% if (user.role === "member" || user.role === "admin") { %>
                    <div class="message-meta">
                        <span class="username"><%= message.username %></span> â€¢ 
                        <%= new Date(message.created_at).toLocaleString('en-US', {
                            month: '2-digit',
                            day: '2-digit',
                            year: 'numeric',
                            hour: '2-digit',
                            minute: '2-digit'
                        }) %>
                    </div>
                <% } %>
    
                <!-- Admin can delete messages -->
                <% if (user.role === "admin") { %>
                    <form action="/messages/delete/<%= message.id %>" method="POST">
                        <button type="submit" class="delete-button">Delete</button>
                    </form>
                <% } %>
            </li>
        <% }) %>
    </ul>

    <form action="/messages/new" method="post" >
        <label for="message">New Message:</label>
        <input type="text" id="message" name="message" required>
        <button type="submit">Send</button>
    </form>

</div>